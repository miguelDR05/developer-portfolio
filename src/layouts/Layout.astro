---
import "@fontsource-variable/onest";
const { title = "Portafolio — Segundo Miguel Delgado Ruiz" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta
      name="description"
      content="Portafolio de Segundo Miguel Delgado Ruiz — Desarrollador Full-Stack & Analista de Sistemas"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>
  
  <body class="relative text-black dark:text-white bg-slate-950">
    <!-- Fondo fijo de cuadrícula (Ibelick) detrás de todo el contenido -->
    <div
      aria-hidden="true"
      class="fixed inset-0 -z-10 pointer-events-none bg-slate-950 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)]"
    >
    </div>

    <slot />
  </body>
  <script type="module" src="/src/scripts/main.js"></script>
</html>
