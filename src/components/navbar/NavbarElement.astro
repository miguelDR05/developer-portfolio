---
import type { Menu } from "../../interfaces/Menu";

const { href, title, current } = Astro.props as Menu;
---

<li>
  <a
    href={href}
    class:list={{
      // clases base siempre presentes
      "block py-2 px-3 rounded-sm md:p-0": true,

      // estilos cuando está activo
      "text-white bg-blue-700 md:bg-transparent md:text-blue-700 md:dark:text-blue-500":
        current,

      // estilos cuando NO está activo
      "text-gray-900 hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent":
        !current,
    }}
    aria-current={current ? "page" : undefined}>{title}</a
  >
</li>