---
import TitleSection from "@components/TitleSection.astro";
import Code from "@components/icons/Code.astro";
import type { Project } from "../interfaces/Project";

const { projects = [] } = Astro.props as { projects: Array<Project> };
---

<section
  id="proyectos"
  class="scroll-section px-4 md:px-8 w-full mx-auto container lg:max-w-4xl md:max-w-2xl text-gray-700 dark:text-gray-300"
>
  <TitleSection> <Code /> Proyectos </TitleSection>
  <div class="w-full">
    <div class="my-slider flex transition-transform duration-500 ease-in-out">
      {
        projects.map((p: Project) => (
          <article
            data-id={p.id}
            class="carousel-item flex-shrink-0 w-full p-4"
          >
            <img
              src={p.image}
              alt={p.title}
              class="w-full h-48 md:h-64 object-cover rounded-md shadow-lg"
              loading="lazy"
            />
            <div class="text-left">
              <h3 class="text-2xl font-bold text-gray-700 dark:text-gray-300 mb-2">{p.title}</h3>
            </div>
            <p class="mb-4">{p.description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {p.stack.map((s: string) => (
                <span class="bg-[var(--color-blue)] text-xs px-2 py-1 rounded">
                  {s}
                </span>
              ))}
            </div>
            <div class="mt-3 flex gap-3">
              {p.demo ? (
                <a href={p.demo} class="hover:text-white font-medium flex items-center gap-2">
                  Ver Demo <i class="fas fa-external-link-alt text-sm" />
                </a>
              ) : null}
              {p.github ? (
                <a href={p.github} class="hover:text-white font-medium flex items-center gap-2">
                  Ver CÃ³digo <i class="fas fa-code text-sm" />
                </a>
              ) : null}
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>

<script type="module" is:inline>
  import { initSlider } from "/src/scripts/slider-init.js";
  if (typeof window !== "undefined") {
    document.addEventListener("DOMContentLoaded", () => {
      console.log("Projects component: DOMContentLoaded -> initSlider()");
      initSlider();
    });
  }
</script>