---
const { skills = [] } = Astro.props;
---

<div>
  <h2 class="text-2xl font-bold text-center">Mis habilidades</h2>
  <div
    class="mt-8 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-8 justify-items-center"
  >
    {
      skills.map((skill: any) => (
        <div
          data-id={skill.id}
          class="w-36 h-36 flex flex-col items-center justify-center card-bg rounded-xl transform transition hover:-translate-y-2"
        >
          <img
            src={skill.icon}
            alt={skill.name}
            width="100"
            height="70"
            class="w-14 h-14 object-contain mb-3"
          />
          <p class="text-sm font-semibold">{skill.name}</p>
        </div>
      ))
    }
  </div>
</div>
