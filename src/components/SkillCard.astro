---
import type { Skill } from '@interfaces/Skill';

const { skill } = Astro.props as Skill;
---

<!-- Habilidad 1: HTML5 -->
<div class="skill-card">
  <div class="skill-card-inner">
    <div class="skill-card-front text-gray-700 dark:text-gray-300">
      <img
        src={skill.icon}
        alt={skill.name}
        width="100"
        height="70"
        class="w-14 h-14 object-contain mb-3"
      />
      <p class="font-semibold text-lg">{skill.name}</p>
    </div>
    <div class="skill-card-back">
      <p>{skill.description}</p>
    </div>
  </div>
</div>
