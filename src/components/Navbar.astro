<header class="sticky top-0 z-50 bg-[rgba(2,6,8,0.72)] backdrop-blur-sm border-b border-white/5">
  <div class="main-container flex items-center justify-between py-3">
    <a href="#inicio" class="text-primary font-bold text-xl">miguelDR05</a>

    <nav class="hidden md:flex gap-6 items-center">
      <a class="text-white/90 hover:text-primary" href="#inicio">Inicio</a>
      <a class="text-white/90 hover:text-primary" href="#sobre-mi">Sobre mi</a>
      <a class="text-white/90 hover:text-primary" href="#habilidades">Habilidades</a>
      <a class="text-white/90 hover:text-primary" href="#proyectos">Portafolio</a>
      <a class="text-white/90 hover:text-primary" href="#contacto">Contacto</a>
    </nav>

    <!-- mobile -->
    <div class="md:hidden">
      <button id="nav-toggle" aria-label="Abrir menÃº" class="p-2 rounded-md border border-white/5 text-white/90">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-white/3 bg-[rgba(2,6,8,0.6)]">
    <div class="flex flex-col p-4 gap-3">
      <a class="text-white/90 hover:text-primary" href="#inicio">Inicio</a>
      <a class="text-white/90 hover:text-primary" href="#sobre-mi">Sobre mi</a>
      <a class="text-white/90 hover:text-primary" href="#habilidades">Habilidades</a>
      <a class="text-white/90 hover:text-primary" href="#proyectos">Portafolio</a>
      <a class="text-white/90 hover:text-primary" href="#contacto">Contacto</a>
    </div>
  </div>

  <script type="module">
    if (typeof window !== 'undefined') {
      const btn = document.getElementById('nav-toggle');
      const menu = document.getElementById('mobile-menu');
      btn?.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
      // close on link click
      menu?.querySelectorAll('a').forEach(a => a.addEventListener('click', () => menu.classList.add('hidden')));
    }
  </script>
</header>